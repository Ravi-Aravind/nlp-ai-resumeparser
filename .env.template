# AI Hiring Management System - Environment Configuration

# Application Settings
APP_NAME=AI Hiring Management System
APP_VERSION=2.1.0
DEBUG=True
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database Settings
DATABASE_URL=sqlite:///./data/hiring_system.db
DATABASE_BACKUP_DIR=./data/backups

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Google Calendar API (Get these from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_PROJECT_ID=your_google_project_id_here

# LinkedIn API (Get these from LinkedIn Developer Portal)  
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Security Settings
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Production Settings (uncomment for production)
# DEBUG=False
# ENVIRONMENT=production  
# ALLOWED_ORIGINS=https://yourdomain.com
# DATABASE_URL=postgresql://user:password@localhost/hiring_db
